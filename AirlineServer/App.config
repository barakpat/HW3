<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>
    <services>
      <service name="AirlineServer.AirlineServerSoap" behaviorConfiguration="CalculatorServiceBehaviors">
        <endpoint address="AirlineServerSoap"
                  binding="basicHttpBinding"
                  contract="AirlineServer.IAirlineServerSoap"/>

        <endpoint contract="IMetadataExchange"
                  binding="mexHttpBinding"
                  address="mex" />
      </service>
      <service name="AirlineServer.AirlineCommunication" behaviorConfiguration="CalculatorServiceBehaviors">
        <endpoint address="AirlineCommunication"
                  binding="basicHttpBinding"
                  contract="AirlineServer.IAirlineCommunication"/>
      </service>
    
    </services>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="CalculatorServiceBehaviors" >
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>